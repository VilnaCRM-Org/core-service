{
  "name": "vilnacrm/core-service",
  "description": "Microservices template for modern PHP applications",
  "type": "project",
  "license": "proprietary",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "ext-ctype": "*",
    "ext-dom": "*",
    "ext-iconv": "*",
    "ext-mbstring": "*",
    "ext-mongodb": "*",
    "ext-simplexml": "*",
    "ext-xml": "*",
    "api-platform/core": "^4.0",
    "api-platform/doctrine-odm": "*",
    "aws/aws-sdk-php": "^3.317.1",
    "cfpinto/graphql": "^2.0",
    "doctrine/mongodb-odm": "^2.10",
    "doctrine/mongodb-odm-bundle": "^5.3",
    "dpauli/graphql-request-builder": "^1.8",
    "phpmailer/phpmailer": "^7.0",
    "sebastian/phpcpd": "^6.0",
    "symfony/asset": "7.2.*",
    "symfony/cache": "7.2.*",
    "symfony/console": "7.2.*",
    "symfony/dotenv": "7.2.*",
    "symfony/flex": "^2.2",
    "symfony/framework-bundle": "7.1.*",
    "symfony/http-foundation": "^7.3.7",
    "symfony/messenger": "7.2.*",
    "symfony/proxy-manager-bridge": "^6.4",
    "symfony/runtime": "7.2.*",
    "symfony/translation": "7.2.*",
    "symfony/twig-bundle": "7.2.*",
    "symfony/uid": "7.2.*",
    "symfony/validator": "7.2.*",
    "symfony/yaml": "7.2.*",
    "webonyx/graphql-php": "^15.14",
    "mongodb/mongodb": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "symfony/flex": true,
      "symfony/runtime": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": false
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "platform": {
      "php": "8.3.12",
      "ext-mongodb": "1.21.1"
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "7.1.*",
      "docker": true
    },
    "_comments": {
      "behat-gherkin": "Version locked to 4.10 due to compatibility issues. See: https://github.com/Behat/Gherkin/issues/317"
    }
  },
  "require-dev": {
    "behat/behat": "^3.19",
    "behat/gherkin": "4.16.1",
    "behat/mink": "^1.12",
    "behat/mink-browserkit-driver": "^2.0",
    "dg/bypass-finals": "^1.5",
    "doctrine/data-fixtures": "^2.0",
    "fakerphp/faker": "^1.23.0",
    "friends-of-behat/symfony-extension": "^2.4",
    "friendsofphp/php-cs-fixer": "^3.14",
    "infection/infection": "^0.27.10",
    "marcocesarato/php-conventional-changelog": "^1.16",
    "nunomaduro/phpinsights": "^2.7",
    "pheromone/phpcs-security-audit": "^2.0",
    "phpmd/phpmd": "^2.15",
    "phpmetrics/phpmetrics": "^2.9",
    "phpunit/phpunit": "^9.5",
    "psalm/plugin-phpunit": "^0.19.0",
    "psalm/plugin-symfony": "^5.2",
    "qossmic/deptrac-shim": "^1.0",
    "ramsey/conventional-commits": "^1.3",
    "symfony/browser-kit": "7.2.*",
    "symfony/css-selector": "7.2.*",
    "symfony/mime": "^7.2",
    "symfony/phpunit-bridge": "8.0.*",
    "twentytwo-labs/behat-open-api": "^1.0",
    "vimeo/psalm": "*",
    "weirdan/doctrine-psalm-plugin": "^2.5"
  },
  "version": "0.8.0"
}
