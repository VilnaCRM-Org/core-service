<doctrine-mongo-mapping
  xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd"
>

    <document name="App\Core\Customer\Domain\Entity\Customer" db="app" collection="customers">

        <id field-name="ulid" type="ulid" strategy="NONE" />

        <field field-name="initials" type="string" />
        <field field-name="email" type="string" />
        <field field-name="phone" type="string" />
        <field field-name="leadSource" type="string" />
        <field field-name="createdAt" type="date_immutable" />
        <field field-name="updatedAt" type="date" />
        <field field-name="confirmed" type="boolean" />

        <reference-one
      target-document="App\Core\Customer\Domain\Entity\CustomerStatus"
      field="status"
      store-as="id"
    />
        <reference-one
      target-document="App\Core\Customer\Domain\Entity\CustomerType"
      field="type"
      store-as="id"
    />

        <indexes>
            <!--
                Indexing Strategy:
                1. Email: unique single-field index for uniqueness constraint (not for pagination)
                2. Search filters (initials, email, phone, leadSource): compound with ulid for cursor pagination
                3. Date filters (createdAt, updatedAt): compound with ulid for date range + pagination
                4. Boolean filter (confirmed): compound with ulid for filtering + pagination
                5. Reference filters (type, status): compound with ulid - references stored as IDs via store-as="id"
                   (API Platform filters use type.value/status.value to traverse to referenced document)
            -->
            <index unique="true">
                <key name="email" />
            </index>

            <!-- Search filters + cursor pagination (config/services.yaml: customer.mongodb.search) -->
            <index>
                <key name="initials" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="phone" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="leadSource" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <!-- Date filters + cursor pagination (config/services.yaml: customer.mongodb.date) -->
            <index>
                <key name="createdAt" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="updatedAt" order="asc" />
                <key name="ulid" order="asc" />
            </index>

            <!-- Boolean filter + cursor pagination (config/services.yaml: customer.mongodb.boolean) -->
            <index>
                <key name="confirmed" order="asc" />
                <key name="ulid" order="asc" />
            </index>

            <!-- Reference filters (store-as="id" stores ObjectId; type.value/status.value traverse to document) -->
            <index>
                <key name="status" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="type" order="asc" />
                <key name="ulid" order="asc" />
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>
