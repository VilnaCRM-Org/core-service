<doctrine-mongo-mapping
  xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd"
>

    <document name="App\Core\Customer\Domain\Entity\Customer" db="app" collection="customers">

        <id field-name="ulid" type="ulid" strategy="NONE" />

        <field field-name="initials" type="string" />
        <field field-name="email" type="string" />
        <field field-name="phone" type="string" />
        <field field-name="leadSource" type="string" />
        <field field-name="createdAt" type="date_immutable" />
        <field field-name="updatedAt" type="date" />
        <field field-name="confirmed" type="boolean" />

        <reference-one
      target-document="App\Core\Customer\Domain\Entity\CustomerStatus"
      field="status"
      store-as="id"
    />
        <reference-one
      target-document="App\Core\Customer\Domain\Entity\CustomerType"
      field="type"
      store-as="id"
    />

        <indexes>
            <index unique="true">
                <key name="email" />
            </index>

            <!-- Optimize API Platform exact filters + cursor pagination (sorted by ulid/_id) -->
            <index>
                <key name="initials" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="phone" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="leadSource" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="createdAt" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="updatedAt" order="asc" />
                <key name="ulid" order="asc" />
            </index>

            <index>
                <key name="confirmed" order="asc" />
                <key name="ulid" order="asc" />
            </index>

            <!-- References are stored as IDs; indexing helps filters and hydration lookups -->
            <index>
                <key name="status" order="asc" />
                <key name="ulid" order="asc" />
            </index>
            <index>
                <key name="type" order="asc" />
                <key name="ulid" order="asc" />
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>
