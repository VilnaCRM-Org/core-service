<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="App\Customer\Domain\Entity\Customer" db="app" collection="customers">

        <id type="ulid" field-name="ulid" strategy="NONE"/>
        <field name="initials" type="string" />
        <field name="email" type="string" />
        <field name="phone" type="string" />
        <field name="leadSource" type="string" />
        <field name="createdAt" type="date" />
        <field name="updatedAt" type="date" />
        <field name="confirmed" type="boolean" />
        <reference-one target-document="App\Customer\Domain\Entity\CustomerStatus" field="status" store-as="id"/>
        <reference-one target-document="App\Customer\Domain\Entity\CustomerType" field="type" store-as="id"/>
        <indexes>
            <index unique="true">
                <key name="email"/>
            </index>
            <index>
                <key name="ulid" order="desc"/>
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>
