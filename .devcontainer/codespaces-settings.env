# Repository-tracked defaults for GitHub Codespaces bootstrap.
# Secrets must stay in Codespaces secrets, not in git.

CODEX_NPM_PACKAGE="${CODEX_NPM_PACKAGE:-@openai/codex}"
CODEX_PROFILE_NAME="${CODEX_PROFILE_NAME:-openrouter}"
CODEX_MODEL="${CODEX_MODEL:-openai/gpt-5.2-codex}"
CODEX_OPENROUTER_BASE_URL="${CODEX_OPENROUTER_BASE_URL:-https://openrouter.ai/api/v1}"
CODEX_REASONING_EFFORT="${CODEX_REASONING_EFFORT:-high}"
CODEX_REASONING_SUMMARY="${CODEX_REASONING_SUMMARY:-none}"
CODEX_APPROVAL_POLICY="${CODEX_APPROVAL_POLICY:-never}"
CODEX_SANDBOX_MODE="${CODEX_SANDBOX_MODE:-danger-full-access}"

CLAUDE_NPM_PACKAGE="${CLAUDE_NPM_PACKAGE:-@anthropic-ai/claude-code}"
CLAUDE_DEFAULT_MODEL="${CLAUDE_DEFAULT_MODEL:-anthropic/claude-sonnet-4.5}"
CLAUDE_OPENROUTER_BASE_URL="${CLAUDE_OPENROUTER_BASE_URL:-https://openrouter.ai/api}"
CLAUDE_PERMISSION_MODE="${CLAUDE_PERMISSION_MODE:-bypassPermissions}"

GH_HOST="${GH_HOST:-github.com}"
GH_GIT_PROTOCOL="${GH_GIT_PROTOCOL:-ssh}"
GH_PROMPT="${GH_PROMPT:-disabled}"
GH_TOKEN_VAR="${GH_TOKEN_VAR:-GH_AUTOMATION_TOKEN}"

CODESPACE_GITHUB_ORG="${CODESPACE_GITHUB_ORG:-VilnaCRM-Org}"
CODESPACE_GIT_IDENTITY_NAME="${CODESPACE_GIT_IDENTITY_NAME:-vilnacrm ai bot}"
CODESPACE_GIT_IDENTITY_EMAIL="${CODESPACE_GIT_IDENTITY_EMAIL:-info@vilnacrm.com}"
